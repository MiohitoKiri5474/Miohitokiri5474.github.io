---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Body from "../components/Body.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";

const today = new Date();
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style>
            body {
                overflow: hidden;
            }
            footer {
                text-align: left;
            }
        </style>
    </head>
    <GoogleAnalytics id="G-5PX5VJYPVK"/>
    <Body>
        <Header className="text-zinc-300" />
        <main>
            <section class="relative h-screen flex items-center">
                <div class="absolute w-full h-full overflow-hidden">
                    <img
                        class="absolute left-1/2 top-1/2 min-w-full min-h-full object-cover -translate-x-1/2 -translate-y-1/2"
                        src="/masthead-homepage.jpg"
                        alt="Mathead Image"
                    />
                </div>
                <div
                    class="x-10 px-8 drop-shadow-lg shadow-black"
                >
                    <div class="uppercase text-sm mb-4 text-zinc-300">Welcome to</div>
                    <div class="text-4xl font-medium text-zinc-300">
                        <span class="text-red-500">MiohitoKiri5474's</span> Blog
                    </div>
                    <footer class=" text-zinc-300">
                        &copy; {today.getFullYear()} MiohitoKiri5474. All rights
                        reserved. <br />
                        Made with <a
                            href="https://astro.build/"
                            class="text-zinc-400 dark:text-zinc-50 hover:text-violet-600 hover:dark:text-violet-600"
                            >Astro.js</a
                        > and <a
                            href="https://tailwindcss.com/"
                            class="text-zinc-400 dark:text-zinc-50 hover:dark:text-sky-500 hover:text-sky-500"
                            >Tailwind CSS</a
                        >.
                    </footer>
                </div>
            </section>
        </main>
    </Body>
</html>
