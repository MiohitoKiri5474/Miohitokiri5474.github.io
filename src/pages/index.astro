---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Body from "../components/Body.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <Body>
        <Header />
        <main class="pt-[80px]">
            <section class="relative mb-6 h-80 flex items-center">
                <div class="absolute w-full h-full overflow-hidden">
                    <img
                        class="absolute h-auto left-1/2 top-1/2 min-w-full min-h-full object-cover -translate-x-1/2 -translate-y-1/2"
                        src="/masthead-homepage.jpg"
                    />
                </div>
                <div class="x-10 px-8 drop-shadow-lg shadow-black">
                    <div class="uppercase text-sm mb-4 text-zinc-300">
                        Welcome to
                    </div>
                    <div class="text-4xl font-mplus font-medium text-zinc-300">
                        <span class="text-red-500">MiohitoKiri5474's</span> Blog
                    </div>
                </div>
            </section>
        </main>
        <Footer />
    </Body>
</html>
