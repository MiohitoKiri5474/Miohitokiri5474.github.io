---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { IoLogoGithub } from "react-icons/io5";
import ThemeToggle from "./ThemeToggleButtom";
import BlogSelect from "./BlogSelect";
import DropdownMenu from "./DropdownMenu.tsx";

const { className = "" } = Astro.props;
---

<header class={`fixed w-full p-2 z-20 backdrop-blur-md ${className}`}>
    <div class="mx-auto mx-w-3xl">
        <nav class="flex items-center gap-3 text-base">
            <div class="font-semibold tracking-tighter p-2 text-lg">
                <a href="/" class="no-underline">
                    {SITE_TITLE}
                </a>
            </div>
            <div class="items-center gap-6 hidden md:flex">
                <HeaderLink href="/">Home</HeaderLink>
                <BlogSelect className={className} client:visible />
                <HeaderLink href="/about">About</HeaderLink>
                <HeaderLink href="https://github.com/MiohitoKiri5474">
                    <IoLogoGithub />Github
                </HeaderLink>
            </div>
            <div class="flex-1"></div>
            <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script src="/pagefind/pagefind-ui.js"></script>
<div id="search"></div>
<script>
  window.addEventListener('DOMContentLoaded', (event) => {
    // 替換 #search 為你想要放置搜尋的元素
    new PagefindUI({ element: '#search', showSubResults: true });
  });
</script>
            <ThemeToggle client:visible />
            <DropdownMenu client:visible />
        </nav>
    </div>
</header>
